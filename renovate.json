{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "@nuxtjs"
  ],
  "ignoreDeps": [
    "vue-bundle-renderer",
    "vite"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["vue"],
      "allowedVersions": "!/3$/"
    },
    {
      "matchPackageNames": ["vue-router"],
      "allowedVersions": "!/4$/"
    }
  ]
}
